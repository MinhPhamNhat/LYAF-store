    <div class="LYAF-dasboard-body">
        <div class="LYAF-dashboard-header">
            <span class="text-uppercase font-weight-bold">PRODUCT DETAIL</span>
        </div>
        <div class="LYAF-dashboard-content">
    <div class="row">
        <div class="LYAF-dashboard-block col">
            <div class="LYAF-block-title">
                <span class="font-weight-bold" style="letter-spacing: 0.04em">Product property</span>
                <i class="fas fa-info-circle required-info">
                </i>
                    <span class="LYAF-tooltip font-weight-bold" style="letter-spacing: 0.04em">This information is required</span>
                <hr>
            </div>
            <div class="LYAF-block-content">
                <div class="LYAF-product-name">
                    <span class=" font-weight-bold">Product name :</span>
                    <input type="text" placeholder="Type your product name here" value="{{data.name}}" readonly disabled>
                </div>
                <div class="row">
                    <div class="LYAF-product-category col">
                        <label for="basic-url" class="font-weight-bold">Category</label>
                        <div class="input-group mb-3">
                            {{#if data.categoryId.parentId}}<i>{{data.categoryId.parentId.name}} </i>  -{{/if}} <i> {{data.categoryId.name}}</i> 
                        </div>
                    </div>
                    <div class="LYAF-product-price col">
                        <label for="basic-url" class="font-weight-bold">Product price</label>
                        <div class="input-group mb-3">
                            <div class="input-group-prepend">
                                <span class="input-group-text font-weight-bold">VND</span>
                            </div>
                            <input type="text" class="form-control" placeholder="Price" aria-label="Price" value="{{#priceFormat price=data.price}}{{/priceFormat}}">
                        </div>
                    </div>
                </div>
            </div>
        </div>
        
        <div class="LYAF-dashboard-block col">
            <div class="LYAF-block-title">
                <span class="font-weight-bold" style="letter-spacing: 0.04em">Product description</span>
                <i class="fas fa-info-circle required-info">
                </i>
                    <span class="LYAF-tooltip font-weight-bold" style="letter-spacing: 0.04em">This information is required</span>
                <hr>
            </div>
            <div class="LYAF-block-content">
                <div class="LYAF-product-description">
                    <span class=" font-weight-bold">Product description :</span>
                    <p id="desc">
                        {{{data.desc}}}
                    </p>
                </div>
            </div>
        </div>
    </div>
    
    <div class="row">
        <div class="LYAF-dashboard-block col">
            <div class="LYAF-block-title">
                <span class="font-weight-bold" style="letter-spacing: 0.04em">Images supplement</span>
                <i class="fas fa-info-circle required-info">
                </i>
                    <span class="LYAF-tooltip font-weight-bold" style="letter-spacing: 0.04em">This information is required</span>
                <hr>
            </div>
            <div class="LYAF-block-content">
                <div class="LYAF-product-image ">
                    <div class="LYAF-preview-wrapper">
                        <div class="LYAF-preview-container">
                            <div class="list-title">
                                <div class="title-info">
                                    <span class="font-weight-bold title" style="letter-spacing: 0.04em">Product images</span>
                                    <span class="font-weight-bold info" style="letter-spacing: 0.04em">{{data.images.length}} images</span>
                                </div>
                            </div>
                            <div class="LYAF-preview-list">
                                {{#each data.images}}
                                <div class="LYAF-image-preview">
                                    <a class="LYAF-aaaa" href="{{this}}">
                                    <img src="{{this}}" class="$@da@# " height="auto" width="100">
                                    </a>
                                    <span class="image-info font-weight-bold">
                                    <span class="LYAF-asssA">
                                        <span id="thumbnail"></span>
                                    </span>
                                    </span>
                                </div>
                                {{/each}}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    
        <div class="LYAF-dashboard-block col">
            <div class="LYAF-block-title">
                <span class="font-weight-bold" style="letter-spacing: 0.04em">Sub Products</span>
                <i class="fas fa-info-circle required-info">
                </i>
                    <span class="LYAF-tooltip font-weight-bold" style="letter-spacing: 0.04em">This information is required</span>
                <hr>
            </div>
            <div class="LYAF-block-content">
                <div class="LYAF-sub-products-add">
                    <div class="title-info">
                        <span class="font-weight-bold title" style="letter-spacing: 0.04em">Sub product list</span>
                        <span class="font-weight-bold info" style="letter-spacing: 0.04em">0 products</span>
                    </div>
                </div>
                <div class="LYAF-sub-products-list">
                    {{#each data.subProduct}}
                        <div class="sub-product">
                            <div class="sub-p-infor">
                                <table>
                                    <tr>
                                        <td><div class="color">
                                    <strong>Color: </strong>
                                    <span id="value">{{this.colorId.name}}</span>
                                </div></td>
                                        <td><div class="size">
                                    <strong>Size: </strong>
                                    <span id="value">{{this.sizeId.name}}</span>
                                </div></td>
                                        <td><div class="quantity">
                                    <strong>Quantity: </strong>
                                    <span id="value">{{this.quantity}}</span>
                                </div></td>
                                    </tr>
                                </table>
                            </div>
                        </div>
                    {{/each}}
                </div>
            </div>
        </div>
    </div>
